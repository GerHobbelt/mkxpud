# recipe file

[name]
network

[package]
dhcp3-client
wvdial
ppp
pppoeconf
net-tools

[binary]

/sbin/iptables
/sbin/iptables-save
/sbin/iptables-restore
/sbin/iptables-xml

/sbin/dhclient
/sbin/dhclient-script
/sbin/dhclient3

/usr/bin/poff
/usr/bin/pon
/usr/bin/wvdial

/usr/sbin/pppconfig
/usr/sbin/pppd
/usr/sbin/pppdump
/usr/sbin/pppoe-discovery
/usr/sbin/pppoeconf
/usr/sbin/pppstats

[data]
/etc/dhcp3
/etc/ppp
/etc/resolv.conf
/usr/lib/pppd
/lib/iptables

[config]

/etc/wvdial.conf

[overwrite]

/var/run/network
/var/lib/dhcp3

