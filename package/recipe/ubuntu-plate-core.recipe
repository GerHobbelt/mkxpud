# recipe file

[name]
plate-core

[package]
mozplugger

[action]

# download firefox
if [ ! -e skeleton/archive/firefox-3.5.4.tar.bz2 ]; then wget http://releases.mozilla.org/pub/mozilla.org/firefox/releases/3.5.4/linux-i686/en-US/firefox-3.5.4.tar.bz2 -P skeleton/archive/; fi; 
tar jxf skeleton/archive/firefox-3.5.4.tar.bz2 -C $MKXPUD_TARGET/usr/share/;

# FIXME: remove firefox updater and components
rm -f $MKXPUD_TARGET/usr/share/firefox/updater;
rm -f $MKXPUD_TARGET/usr/share/firefox/crashreporter;
rm -f $MKXPUD_TARGET/usr/share/firefox/components/libmozgnome.so;
rm -f $MKXPUD_TARGET/usr/share/firefox/components/libnkgnomevfs.so;

