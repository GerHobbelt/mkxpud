# recipe file
[name]
pcmanfm2

[package]
libmenu-cache1
lxmenu-data

[action]
local REPOSITORY="https://launchpad.net/~lubuntu-desktop/+archive/ppa/+files/"
local LIBFM="libfm0_0.1.10-0ubuntu1~ppa1_i386.deb"
local LIBFM_DBG="libfm0-dbg_0.1.10-0ubuntu1~ppa1_i386.deb"
local LIBFM_UTILS="libfm-utils_0.1.10-0ubuntu1~ppa1_i386.deb"
local LIBFM_GTK="libfm-gtk0_0.1.10-0ubuntu1~ppa1_i386.deb"
local PCMANFM2="pcmanfm2_0.9.4-0ubuntu1~ppa1_i386.deb"
local PCMANFM2_DBG="pcmanfm2-dbg_0.9.4-0ubuntu1~ppa1_i386.deb";
echo "Downloading";
# download and unpack libfm
wget -c -nc $REPOSITORY$LIBFM -P skeleton/archive/;
dpkg -x skeleton/archive/$LIBFM $MKXPUD_TARGET;
#wget -c -nc $REPOSITORY$LIBFM_DBG -P skeleton/archive/;
#dpkg -x skeleton/archive/$LIBFM_DBG $MKXPUD_TARGET;
wget -c -nc $REPOSITORY$LIBFM_UTILS -P skeleton/archive/;
dpkg -x skeleton/archive/$LIBFM_UTILS $MKXPUD_TARGET;
wget -c -nc $REPOSITORY$LIBFM_GTK -P skeleton/archive/;
dpkg -x skeleton/archive/$LIBFM_GTK $MKXPUD_TARGET;
# download and unpack pcmanfm2
wget -c -nc $REPOSITORY$PCMANFM2 -P skeleton/archive/;
dpkg -x skeleton/archive/$PCMANFM2 $MKXPUD_TARGET;
#wget -c -nc $REPOSITORY$PCMANFM2_DBG -P skeleton/archive/;
#dpkg -x skeleton/archive/$PCMANFM2_DBG $MKXPUD_TARGET;

