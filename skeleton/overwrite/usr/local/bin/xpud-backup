#!/bin/bash
# xpud-backup <path>

if [ -d $1 ]; then

mkdir -p /tmp/backup
cd /tmp/backup

tar cpvf - -T /etc/xpud-backup.conf | tar xvf -;
find | cpio -H newc -o | gzip -9 > $1/xpud-data.gz

cd -
rm -rf /tmp/backup

# if additional parameter was passed - poweroff or reboot
	if [ "$2" == "-p" ]; then
		poweroff -f
	fi
	
	if [ "$2" == "-r" ]; then
		reboot -f
	fi
	
	if [ "$2" == "-s" ]; then
		boot-to-win
	fi 

fi
