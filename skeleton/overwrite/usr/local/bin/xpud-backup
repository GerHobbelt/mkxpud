#!/bin/bash
# xpud-backup <path> [-p|-r|-s]

if [ -d $1 ]; then

# FIXME: maybe exclude /dev, /mnt, /var directories?
find /cow | cpio -H newc -o | gzip -9 > $1/xpud-data.gz

# if additional parameter was passed - poweroff or reboot
case "$2" in
	'-p')
		poweroff -f;
	;;
	'-r')
		reboot -f;
	;;
	'-s')
		boot-to-win;
	;;
esac

fi
