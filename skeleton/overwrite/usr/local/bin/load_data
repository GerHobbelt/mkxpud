#!/bin/bash
# load user data and opt files 
# by default it will load file named "xpud-data.gz", gzipped CPIO 
# load_data [<path>]

if [ -z $1 ]; then

	for p in `ls /mnt/`; do 

		# load user data if exist 
		if [ -e /mnt/$p/xpud-data.gz ]; then
			cd /
			cat /mnt/$p/xpud-data.gz | gzip -d | cpio -i
			cd -
		fi

		# install opt file if exist 
		if [ -d /mnt/$p/opt ]; then
			find /mnt/$p/opt -name *.opt -exec opt-get {} \;
		fi

	done

else
		if [ -e $1 ]; then
			cd /
			cat $1 | gzip -d | cpio -i
			cd -
		fi
fi
